# Upbit AutoProfit Bot v5.3 - 동적 코인 선정 + 초단타 강화
# 자본금 30만원 모드

# ===== 거래 모드 =====
TRADING_MODE=paper              # paper: 모의투자 / live: 실거래

# ===== 자본 및 리스크 관리 =====
INITIAL_CAPITAL=300000          # 초기 자본 30만원
MAX_DAILY_LOSS=30000           # 일일 최대 손실 3만원 (10%)
MAX_CUMULATIVE_LOSS=60000      # 누적 최대 손실 6만원 (20%)
MAX_POSITIONS=10               # 최대 포지션 10개
MAX_POSITION_RATIO=0.1         # 포지션당 최대 10%

# ===== 🆕 동적 코인 선정 시스템 =====
ENABLE_DYNAMIC_COIN_SELECTION=true  # 동적 코인 선정 활성화
CAPITAL_MODE=30                     # 자본금 모드: 10, 20, 30 (만원 단위)
COIN_SELECTION_METHOD=multi         # volume: 거래량 / rsi: RSI 기준 / multi: 복합
COIN_SELECTION_INTERVAL=300         # 코인 갱신 주기 (초) - 300초 = 5분

# 설명:
# - CAPITAL_MODE=30 → 40개 코인 자동 선정
# - 5분마다 거래량 + RSI + 변동성 복합 분석
# - 최대 분산 투자 (10개 포지션)
# - 초단타 + 일반 전략 혼합 운영

# ===== Upbit API 키 (실거래 시 필수) =====
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

# ===== 로깅 설정 =====
LOG_LEVEL=INFO
ENABLE_TRADING_LOG=true
ENABLE_ERROR_LOG=true

# ===== Phase 2 AI 시스템 =====
ENABLE_ADVANCED_AI=true
ENABLE_ORDERBOOK_ANALYSIS=true
ENABLE_SCENARIO_DETECTION=true
ENABLE_SMART_SPLIT=true
ENABLE_HOLDING_TIME_AI=true

# ===== 동적 청산 시스템 =====
ENABLE_DYNAMIC_EXIT=true
EXIT_MODE=aggressive           # aggressive: 빠른 청산

# ===== 감정 분석 비활성화 (선택사항) =====
ENABLE_SENTIMENT=false
