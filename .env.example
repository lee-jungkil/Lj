# ============================================
# Upbit AutoProfit Bot v5.2 환경 설정 파일
# ============================================

# -----------------------------
# 1️⃣ 거래 모드 설정
# -----------------------------
# backtest: 백테스트 (과거 데이터로 테스트)
# paper: 모의투자 (실시간 데이터 + 가상 거래)
# live: 실거래 (실제 돈으로 거래)
TRADING_MODE=paper

# -----------------------------
# 2️⃣ Upbit API 키 (실거래 시 필수)
# -----------------------------
# Upbit 홈페이지 > 마이페이지 > Open API 관리에서 발급
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

# -----------------------------
# 3️⃣ 자본 및 리스크 설정
# -----------------------------
# 초기 자본 (최소 10만원)
INITIAL_CAPITAL=100000

# 일일 최대 손실 (초기 자본의 10%)
MAX_DAILY_LOSS=10000

# 누적 최대 손실 (초기 자본의 20%)
MAX_CUMULATIVE_LOSS=20000

# 최대 동시 포지션 수
MAX_POSITIONS=3

# 단일 포지션 최대 비율 (자본의 30%)
MAX_POSITION_RATIO=0.3

# -----------------------------
# 4️⃣ AI 시스템 설정
# -----------------------------
# 고급 AI 학습 시스템
ENABLE_ADVANCED_AI=true

# 호가창 분석
ENABLE_ORDERBOOK_ANALYSIS=true

# 시나리오 감지 (45가지 시장 상황)
ENABLE_SCENARIO_DETECTION=true

# 스마트 분할 매매
ENABLE_SMART_SPLIT=true

# 보유 시간 AI 최적화
ENABLE_HOLDING_TIME_AI=true

# 동적 청산 시스템
ENABLE_DYNAMIC_EXIT=true

# 청산 모드 (aggressive, moderate, conservative)
EXIT_MODE=moderate

# -----------------------------
# 5️⃣ 알림 설정 (선택사항)
# -----------------------------
# Telegram 봇 토큰 (텔레그램 알림 원하면 입력)
TELEGRAM_BOT_TOKEN=

# Telegram 채팅 ID
TELEGRAM_CHAT_ID=

# Gmail 설정 (이메일 알림 원하면 입력)
GMAIL_SENDER=
GMAIL_PASSWORD=
GMAIL_RECEIVER=

# -----------------------------
# 6️⃣ 로깅 설정
# -----------------------------
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 거래 로그 활성화
ENABLE_TRADING_LOG=true

# 에러 로그 활성화
ENABLE_ERROR_LOG=true

# -----------------------------
# 7️⃣ 감정 분석 설정 (선택사항)
# -----------------------------
# 🔥 뉴스 감정 분석 활성화 (승률 +6.4% 향상 효과)
# - 활성화: true, 비활성화: false
# - 활성화 시 뉴스 기반 시장 심리 반영으로 진입 타이밍 개선
# - 비활성화 시 감정 점수 0.5(중립) 고정
ENABLE_SENTIMENT=false

# News API 키 (무료 발급 가능)
# 📌 발급 방법:
# 1) https://newsapi.org/register 회원가입
# 2) 무료 플랜: 100 requests/day (암호화폐 뉴스 충분)
# 3) API 키 복사 후 아래에 붙여넣기
# 예시: NEWS_API_KEY=1234567890abcdef1234567890abcdef
# 
# 💡 대체 무료 API:
# - CryptoCompare: https://www.cryptocompare.com/cryptopian/api-keys
# - CoinGecko: https://www.coingecko.com/en/api
# - Alpha Vantage: https://www.alphavantage.co/support/#api-key
NEWS_API_KEY=
