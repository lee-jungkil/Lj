# Upbit AutoProfit Bot v5.2 - 20개 코인 확장 설정
# 이 파일을 .env로 복사하여 사용하세요

# ===== 거래 대상 코인 (20개) =====
# Top 20 시가총액 + 거래량 기준
WHITELIST_COINS=KRW-BTC,KRW-ETH,KRW-XRP,KRW-ADA,KRW-SOL,KRW-DOGE,KRW-DOT,KRW-AVAX,KRW-LINK,KRW-ATOM,KRW-UNI,KRW-NEAR,KRW-ALGO,KRW-VET,KRW-FTM,KRW-HBAR,KRW-ICP,KRW-APT,KRW-OP,KRW-ARB

# ===== 자본 및 리스크 관리 (20개 코인용) =====
INITIAL_CAPITAL=200000           # 초기 자본 20만원 (10만원에서 증액)
MAX_DAILY_LOSS=20000            # 일일 최대 손실 2만원 (10%)
MAX_CUMULATIVE_LOSS=40000       # 누적 최대 손실 4만원 (20%)
MAX_POSITIONS=5                 # 최대 포지션 5개 (3개에서 증가)
MAX_POSITION_RATIO=0.25         # 포지션당 최대 25% (30%에서 하향)

# ===== 거래 모드 =====
TRADING_MODE=paper              # paper: 모의투자 / live: 실거래 / backtest: 백테스트

# ===== Upbit API 키 (실거래 시 필수) =====
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

# ===== 로깅 설정 =====
LOG_LEVEL=INFO
ENABLE_TRADING_LOG=true
ENABLE_ERROR_LOG=true

# ===== Phase 2 AI 시스템 =====
ENABLE_ADVANCED_AI=true
ENABLE_ORDERBOOK_ANALYSIS=true
ENABLE_SCENARIO_DETECTION=true
ENABLE_SMART_SPLIT=true
ENABLE_HOLDING_TIME_AI=true

# ===== 동적 청산 시스템 =====
ENABLE_DYNAMIC_EXIT=true
EXIT_MODE=moderate              # aggressive / moderate / conservative

# ===== 스캔 간격 조정 (20개 코인용) =====
QUICK_CHECK_INTERVAL=10         # 빠른 체크 간격 10초 (5초에서 증가)
FULL_SCAN_INTERVAL=240          # 전체 스캔 간격 4분 (3분에서 증가)
SURGE_SCAN_INTERVAL=20          # 급등 스캔 간격 20초 (10초에서 증가)
