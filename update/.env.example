# ============================================
# Upbit AutoProfit Bot v5.2 환경 설정 파일
# ============================================

# -----------------------------
# 1️⃣ 거래 모드 설정
# -----------------------------
# backtest: 백테스트 (과거 데이터로 테스트)
# paper: 모의투자 (실시간 데이터 + 가상 거래)
# live: 실거래 (실제 돈으로 거래)
TRADING_MODE=paper

# -----------------------------
# 2️⃣ Upbit API 키 (실거래 시 필수)
# -----------------------------
# Upbit 홈페이지 > 마이페이지 > Open API 관리에서 발급
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

# -----------------------------
# 3️⃣ 자본 및 리스크 설정
# -----------------------------
# 초기 자본 (최소 10만원)
INITIAL_CAPITAL=100000

# 일일 최대 손실 (초기 자본의 10%)
MAX_DAILY_LOSS=10000

# 누적 최대 손실 (초기 자본의 20%)
MAX_CUMULATIVE_LOSS=20000

# 최대 동시 포지션 수
MAX_POSITIONS=3

# 단일 포지션 최대 비율 (자본의 30%)
MAX_POSITION_RATIO=0.3

# -----------------------------
# 4️⃣ AI 시스템 설정
# -----------------------------
# 고급 AI 학습 시스템
ENABLE_ADVANCED_AI=true

# 호가창 분석
ENABLE_ORDERBOOK_ANALYSIS=true

# 시나리오 감지 (45가지 시장 상황)
ENABLE_SCENARIO_DETECTION=true

# 스마트 분할 매매
ENABLE_SMART_SPLIT=true

# 보유 시간 AI 최적화
ENABLE_HOLDING_TIME_AI=true

# 동적 청산 시스템
ENABLE_DYNAMIC_EXIT=true

# 청산 모드 (aggressive, moderate, conservative)
EXIT_MODE=moderate

# -----------------------------
# 5️⃣ 알림 설정 (선택사항)
# -----------------------------
# Telegram 봇 토큰 (텔레그램 알림 원하면 입력)
TELEGRAM_BOT_TOKEN=

# Telegram 채팅 ID
TELEGRAM_CHAT_ID=

# Gmail 설정 (이메일 알림 원하면 입력)
GMAIL_SENDER=
GMAIL_PASSWORD=
GMAIL_RECEIVER=

# -----------------------------
# 6️⃣ 로깅 설정
# -----------------------------
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 거래 로그 활성화
ENABLE_TRADING_LOG=true

# 에러 로그 활성화
ENABLE_ERROR_LOG=true

# -----------------------------
# 7️⃣ 감정 분석 설정 (선택사항)
# -----------------------------
# 🔥 뉴스 감정 분석 활성화 (승률 +6.4% 향상 효과)
# - 활성화: true, 비활성화: false
# - 활성화 시 뉴스 기반 시장 심리 반영으로 진입 타이밍 개선
# - 비활성화 시 감정 점수 0.5(중립) 고정
ENABLE_SENTIMENT=false

# News API 키 (무료 발급 가능)
# 📌 발급 방법:
# 1) https://newsapi.org/register 회원가입
# 2) 무료 플랜: 100 requests/day (암호화폐 뉴스 충분)
# 3) API 키 복사 후 아래에 붙여넣기
# 예시: NEWS_API_KEY=1234567890abcdef1234567890abcdef
# 
# 💡 대체 무료 API:
# - CryptoCompare: https://www.cryptocompare.com/cryptopian/api-keys
# - CoinGecko: https://www.coingecko.com/en/api
# - Alpha Vantage: https://www.alphavantage.co/support/#api-key
NEWS_API_KEY=

# ============================================
# 8️⃣ 고급 주문 시스템 설정 (v6.29+)
# ============================================

# -----------------------------
# 주문 방식 설정
# -----------------------------
# 매수 주문 방식: auto, market, limit, best
BUY_ORDER_TYPE=auto

# 매도 주문 방식: auto, market, limit, best
SELL_ORDER_TYPE=auto

# 슬리피지 허용 범위 (%)
SLIPPAGE_TOLERANCE=0.5

# 주문 최대 재시도 횟수
ORDER_MAX_RETRIES=3

# 재시도 대기 시간 (초)
ORDER_RETRY_DELAY=1.0

# 지정가 주문 타임아웃 (초)
LIMIT_ORDER_TIMEOUT=5

# 지정가 Fallback 활성화 (타임아웃 시 시장가 전환)
LIMIT_ORDER_FALLBACK=true

# -----------------------------
# 추격매수 설정
# -----------------------------
# 추격매수 활성화
ENABLE_CHASE_BUY=true

# 1분 급등 임계값 (%)
SURGE_THRESHOLD_1M=1.5

# 5분 급등 임계값 (%)
SURGE_THRESHOLD_5M=3.0

# 15분 급등 임계값 (%)
SURGE_THRESHOLD_15M=5.0

# 거래량 비율 임계값 (배수)
VOLUME_SURGE_RATIO=2.0

# 최소 급등 점수
CHASE_MIN_SCORE=50

# 추격매수 익절 목표 (%)
CHASE_TAKE_PROFIT=2.0

# 추격매수 손절 기준 (%)
CHASE_STOP_LOSS=-3.0

# 추격매수 최대 보유 시간 (초)
CHASE_MAX_HOLD_TIME=300

# 추격매수 최대 동시 포지션
CHASE_MAX_CONCURRENT=2

# 추격매수 일일 최대 횟수
CHASE_DAILY_LIMIT=10

# -----------------------------
# 트레일링 스탑 설정
# -----------------------------
# 트레일링 스탑 활성화
ENABLE_TRAILING_STOP=true

# 트레일링 스탑 오프셋 (%)
# 최고가 대비 -1% 하락 시 청산
TRAILING_STOP_OFFSET=1.0

# 트레일링 스탑 시작 수익률 (%)
# 최소 1% 수익 후 트레일링 시작
TRAILING_STOP_MIN_PROFIT=1.0

# -----------------------------
# 호가창 분석 설정
# -----------------------------
# 스프레드 낮음 임계값 (%)
SPREAD_THRESHOLD_LOW=0.1

# 스프레드 높음 임계값 (%)
SPREAD_THRESHOLD_HIGH=0.5

# -----------------------------
# 전략별 최대 보유 시간 (초)
# -----------------------------
# 추격매수 최대 보유 시간
MAX_HOLD_TIME_CHASE=300

# 초단타 최대 보유 시간
MAX_HOLD_TIME_ULTRA=600

# 공격적 스캘핑 최대 보유 시간
MAX_HOLD_TIME_AGGRESSIVE=1800

# 보수적 스캘핑 최대 보유 시간
MAX_HOLD_TIME_CONSERVATIVE=3600

# 평균회귀 최대 보유 시간
MAX_HOLD_TIME_MEAN_REVERSION=7200

# 그리드 거래 최대 보유 시간
MAX_HOLD_TIME_GRID=86400

# -----------------------------
# 청산 조건 설정
# -----------------------------
# 급락 감지 임계값 (%)
# 1분 내 -1.5% 이상 하락 시 긴급 청산
SUDDEN_DROP_THRESHOLD=-1.5

# 거래량 급감 임계값 (배수)
# 평균 대비 0.5배 이하 시 청산 고려
VOLUME_DROP_THRESHOLD=0.5

# 차트 신호 기반 청산 활성화
ENABLE_CHART_SIGNAL_EXIT=true

# 차트 신호 최소 수익률 (%)
# 차트 신호 발생 시 최소 0.5% 이상 수익일 때만 청산
CHART_SIGNAL_MIN_PROFIT=0.5

