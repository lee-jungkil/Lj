# Upbit AutoProfit Bot v5.2 - 50개 코인 확장 설정 (고급)
# 이 파일을 .env로 복사하여 사용하세요

# ===== 거래 대상 코인 (50개) =====
# 시가총액 + 거래량 + 변동성 기준
WHITELIST_COINS=KRW-BTC,KRW-ETH,KRW-XRP,KRW-ADA,KRW-SOL,KRW-DOGE,KRW-DOT,KRW-AVAX,KRW-LINK,KRW-ATOM,KRW-UNI,KRW-NEAR,KRW-ALGO,KRW-VET,KRW-FTM,KRW-HBAR,KRW-ICP,KRW-APT,KRW-OP,KRW-ARB,KRW-MATIC,KRW-SAND,KRW-MANA,KRW-AXS,KRW-CHZ,KRW-ENJ,KRW-GALA,KRW-FLOW,KRW-1INCH,KRW-CRV,KRW-SHIB,KRW-TRX,KRW-ETC,KRW-XLM,KRW-BCH,KRW-LTC,KRW-EOS,KRW-WAVES,KRW-KLAY,KRW-ZRX,KRW-BAT,KRW-IOST,KRW-ANKR,KRW-STORJ,KRW-SXP,KRW-CVC,KRW-OMG,KRW-SNT,KRW-STRAX,KRW-STX

# ===== 자본 및 리스크 관리 (50개 코인용) =====
INITIAL_CAPITAL=500000          # 초기 자본 50만원
MAX_DAILY_LOSS=50000           # 일일 최대 손실 5만원 (10%)
MAX_CUMULATIVE_LOSS=100000     # 누적 최대 손실 10만원 (20%)
MAX_POSITIONS=10               # 최대 포지션 10개
MAX_POSITION_RATIO=0.2         # 포지션당 최대 20%

# ===== 거래 모드 =====
TRADING_MODE=paper             # paper: 모의투자 / live: 실거래 / backtest: 백테스트

# ===== Upbit API 키 (실거래 시 필수) =====
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

# ===== 로깅 설정 =====
LOG_LEVEL=INFO
ENABLE_TRADING_LOG=true
ENABLE_ERROR_LOG=true

# ===== Phase 2 AI 시스템 =====
ENABLE_ADVANCED_AI=true
ENABLE_ORDERBOOK_ANALYSIS=true
ENABLE_SCENARIO_DETECTION=true
ENABLE_SMART_SPLIT=true
ENABLE_HOLDING_TIME_AI=true

# ===== 동적 청산 시스템 =====
ENABLE_DYNAMIC_EXIT=true
EXIT_MODE=aggressive           # 50개 코인은 공격적 청산 권장

# ===== 스캔 간격 조정 (50개 코인용) =====
QUICK_CHECK_INTERVAL=15        # 빠른 체크 간격 15초
FULL_SCAN_INTERVAL=300         # 전체 스캔 간격 5분
SURGE_SCAN_INTERVAL=30         # 급등 스캔 간격 30초

# ⚠️ 주의: 50개 코인은 API 호출량이 많습니다
# - 안정적인 인터넷 연결 필요
# - VPS 또는 24시간 실행 환경 권장
# - 초기 1~2주는 20개 이하로 테스트 후 확장 권장
