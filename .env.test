# Upbit AutoProfit Bot v5.2 환경 설정
# 테스트 모드: 진입 조건 완화 (학습 데이터 수집용)

TRADING_MODE=paper
INITIAL_CAPITAL=100000
MAX_DAILY_LOSS=10000
MAX_CUMULATIVE_LOSS=20000
MAX_POSITIONS=5
MAX_POSITION_RATIO=0.2

# AI 시스템 활성화
ENABLE_ADVANCED_AI=true
ENABLE_ORDERBOOK_ANALYSIS=true
ENABLE_SCENARIO_DETECTION=true
ENABLE_SMART_SPLIT=true
ENABLE_HOLDING_TIME_AI=true
ENABLE_DYNAMIC_EXIT=true
EXIT_MODE=aggressive

# 로깅
LOG_LEVEL=INFO
ENABLE_TRADING_LOG=true
ENABLE_ERROR_LOG=true

# 감정 분석 비활성화
ENABLE_SENTIMENT=false

# Upbit API 키 (실거래 시 입력)
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

# 알림 설정 (선택사항)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
GMAIL_SENDER=
GMAIL_PASSWORD=
GMAIL_RECEIVER=
NEWS_API_KEY=
